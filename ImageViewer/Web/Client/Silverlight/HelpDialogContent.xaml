<UserControl x:Class="ClearCanvas.ImageViewer.Web.Client.Silverlight.HelpDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight"
    xmlns:helpers="clr-namespace:ClearCanvas.ImageViewer.Web.Client.Silverlight.Helpers"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Foreground="Gray">

    <UserControl.Resources>
        <helpers:ResourceHelper x:Key="LocalizedStrings" />
    </UserControl.Resources>

    <Border Padding="10">
        <StackPanel>
            <TextBlock x:Name="ProductInfoTextBlock" Padding="0,5,0,5"/>
            <TextBlock x:Name="CompanyAddressTextBlock" Padding="0,5,0,5"/>
            <TextBlock x:Name="CompanyWebAddressTextBlock" Padding="0,5,0,5"/>
            <TextBlock x:Name="CopyrightTextBlock" Padding="0,10,0,5"/>
        </StackPanel>
    </Border>
</UserControl>
